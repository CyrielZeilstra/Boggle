<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Boggle.Controller.BoggleController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <GridPane fx:id="mainGrid" alignment="center" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="350.0" prefWidth="350.0">
        <VBox.margin>
          <Insets bottom="20.0" />
        </VBox.margin>
    </GridPane>
   <ListView fx:id="listBox" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="150.0" prefWidth="350.0">
    <VBox.margin>
        <Insets bottom="15.0" />
    </VBox.margin>
   </ListView>
   <ButtonBar prefHeight="40.0" prefWidth="200.0">
     <buttons>
       <Button fx:id="newBoardBtn" mnemonicParsing="false" text="Generate new Board" />
          <Button fx:id="startBtn" mnemonicParsing="false" text="Start search" />
     </buttons>
   </ButtonBar>
</VBox>
